<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="550dp"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    android:paddingBottom="32dp"
    android:paddingTop="0dp"
    android:layout_height="370dp"
    android:background="@drawable/dialog_bg"
    android:gravity="top|center_horizontal"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="top|center_vertical"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/soporte"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Soporte"
            android:lineSpacingExtra="-22sp"
            android:gravity="center"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#00213B"
            android:fontFamily="@font/bevietnampro"
            android:lineHeight="24sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="0dp"
        />

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_gravity="top|end"
            android:contentDescription="Cerrar"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="15dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/soporte_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/soporte"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="BotÃ³n Soporte"
        android:padding="8dp" />
    <ImageView
        android:id="@+id/soporte_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/soporte2"
        android:contentDescription="Imagen Soporte"
        android:layout_gravity="start"
        android:layout_marginTop="38dp" />


</LinearLayout>