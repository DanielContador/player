<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/course_combined_container"
    android:layout_width="450dp"
    android:layout_height="210dp"
    android:layout_marginBottom="8dp">

    <!-- Fondo con relación de aspecto mantenida -->
    <ImageView
        android:id="@+id/course_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_left" />

    <!-- Contenido encima del fondo -->
    <LinearLayout
        android:id="@+id/combined_course_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp"
        android:background="@android:color/transparent">
        <RelativeLayout
            android:id="@+id/item_number_container"
            android:layout_width="380dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/item_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            
                android:text="01"
                android:textColor="#262626"
                android:textSize="60sp"
                android:textStyle="bold"
                android:background="@android:color/transparent" />
        </RelativeLayout>
        <TextView
            android:id="@+id/combined_course_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Nombre del curso"
            android:textSize="15sp"
            android:textColor="#1B1B1B"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/combined_course_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción breve del curso"
            android:textSize="14sp"
            android:textColor="#555"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</FrameLayout>