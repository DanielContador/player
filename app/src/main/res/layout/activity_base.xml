<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" 
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:clipChildren="false" android:clipToPadding="false" android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:clipChildren="false" android:clipToPadding="false" android:orientation="vertical">


        <com.google.android.material.appbar.AppBarLayout android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" android:clipChildren="false"
            android:background="@android:color/transparent" android:clipToPadding="false">


            <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
                android:clipChildren="false" android:clipToPadding="false">

                <ImageView android:id="@+id/topBarDecor" android:layout_width="match_parent"
                    android:layout_height="500dp" android:src="@drawable/ic_top_bar"
                    android:scaleType="fitXY" android:clickable="false" android:elevation="4dp"
                    android:focusable="false" />

                <com.google.android.material.appbar.MaterialToolbar android:id="@+id/toolbar"
                    android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    android:theme="@style/ThemeOverlay.Material3.ActionBar"
                    app:popupTheme="@style/ThemeOverlay.Material3" />

                <LinearLayout android:id="@+id/logo_container" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:orientation="horizontal"
                    android:layout_gravity="start|top" android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp" android:elevation="6dp">

                    <ImageView android:id="@+id/logoPensamiento" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:src="@drawable/pensamiento"
                        android:contentDescription="@null" />


                    <TextView android:id="@+id/appNameText" android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_marginStart="8dp"
                        android:text="@string/app_name" android:fontFamily="@font/biorhyme"
                        android:lineHeight="36sp" android:includeFontPadding="false"
                        android:textSize="24sp" android:breakStrategy="simple"
                        android:hyphenationFrequency="none" android:letterSpacing="0"
                        android:textColor="#11ADCF" android:padding="0dp"
                        android:gravity="center_vertical" />


                    <ImageButton android:id="@+id/helptop" android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical" android:src="@drawable/helptop"
                        android:layout_marginStart="850dp"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                </LinearLayout>

            </FrameLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout android:id="@+id/content_frame" android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <ImageView android:id="@+id/bottomBarDecor" android:layout_width="match_parent"
                android:layout_height="100dp" android:layout_gravity="bottom"
                android:src="@drawable/ic_bot_bar" android:scaleType="fitXY"
                android:contentDescription="barrainferior" android:elevation="4dp" />

                <LinearLayout
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|start"
    android:layout_marginStart="90dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="6dp">

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/textViewItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contenidos completados"
        android:textSize="14sp"
        android:layout_marginBottom="2dp"
        android:gravity="center_horizontal"
        android:textColor="#B4B4B4"
        android:fontFamily="font/bevietnampro"
        android:elevation="6dp" />

    <!-- Contenedor para barra y texto superpuesto -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"

        android:layout_marginBottom="10dp">
        

        <!-- Barra de progreso -->
        <ProgressBar
            android:id="@+id/totalProgressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progress="50"
            android:scaleY="0.5"
            android:progressDrawable="@drawable/rounded_progress_bar"
            android:progressTint="#1AD99D" />

        <!-- Texto del porcentaje -->
        <TextView
            android:id="@+id/totalProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="50%"
            android:textSize="12sp"
            android:textColor="#00213B"
            android:elevation="8dp" />
    </FrameLayout>
</LinearLayout>

            
            <ImageButton android:id="@+id/btnHome" android:layout_width="120dp"
                android:layout_height="120dp" android:layout_gravity="bottom|start"
                android:layout_marginStart="457dp" android:layout_marginBottom="15dp"
                android:src="@drawable/home" android:background="@drawable/circle_shape"
                android:scaleType="centerCrop" android:clipToOutline="true"
                android:outlineProvider="background" android:elevation="6dp" />
            <ImageButton android:id="@+id/btnMenu" android:layout_width="30dp"
                android:layout_height="30dp" android:layout_gravity="bottom|start"
                android:layout_marginStart="620dp" android:layout_marginBottom="25dp"
                android:src="@drawable/menubot" android:background="@null"
                android:scaleType="centerInside" android:elevation="6dp" />

            <ImageButton android:id="@+id/btnMenuInfo" android:layout_width="30dp"
                android:layout_height="30dp" android:layout_gravity="bottom|start"
                android:layout_marginStart="720dp" android:layout_marginBottom="25dp"
                android:src="@drawable/infobot" android:background="@null"
                android:scaleType="centerInside" android:elevation="6dp" />


            <!-- Marca de agua en la esquina inferior derecha -->
            <ImageView
                android:id="@+id/watermark_logo_dl"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/logo_dl_2"
                android:contentDescription="Marca de agua DL"
                android:alpha="0.5"
                android:scaleType="fitEnd"
                android:elevation="8dp" />

        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView android:id="@+id/nav_view"
        android:layout_width="wrap_content" android:layout_height="match_parent"
        android:layout_gravity="start" android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main" app:menu="@menu/activity_main_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>