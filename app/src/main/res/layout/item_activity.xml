<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/miconte_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="65dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp">

            <LinearLayout
                android:id="@+id/btn_ir_a_otros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/left_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/iraotros" />

                <TextView
                    android:id="@+id/ir_a_otros"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Ir a otros"
                    android:textColor="#1CB1D1"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:maxLines="1"
                    android:ellipsize="end"
                />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/miconte_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/miconte"
            android:layout_gravity="end|center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_activity_full"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <com.github.vipulasri.timelineview.TimelineView
            android:id="@+id/timeline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:endLineColor="@color/distNotStart"
            app:lineStyle="dash"
            app:lineWidth="3dp"
            app:marker="@drawable/ic_icono_check_no_iniciado_37x37"
            app:markerSize="30dp"
            app:startLineColor="@color/distNotStart" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/content_cardView"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:id="@+id/item_activity"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:elevation="8dp"
                android:padding="16dp">

                <!-- Número de curso en la esquina superior derecha -->
                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01"
                    android:textStyle="bold"
                    android:textSize="60sp"
                    android:textColor="#262626"
                    android:fontFamily="bevietnampro"
                    android:gravity="right|top"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:lineSpacingExtra="-52sp"
                    android:paddingTop="0dp"
                    android:paddingEnd="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    />

                <!-- Nuevo contenedor de barra de progreso debajo del número -->
                <RelativeLayout
                    android:id="@+id/progress_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/number"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="0dp">

                    <ProgressBar
                        android:id="@+id/itemProgressBar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:progress="50"
                        android:progressTint="#1CB1D1"
                        android:backgroundTint="#E2E2E2"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="2dp"
                        />

                    <TextView
                        android:id="@+id/itemProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/itemProgressBar"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="50%"
                        android:textColor="#00213B"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        />
                </RelativeLayout>

                <!-- Nuevo contenedor para item_name y chip_estado debajo de la barra de progreso -->
                <RelativeLayout
                    android:id="@+id/item_name_chip_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progress_container"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:fontFamily="bevietnampro"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="0dp"
                        />

                    <ImageView
                        android:id="@+id/goArrow"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignTop="@id/item_name"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:src="@drawable/ic_arrow"/>

                    <RelativeLayout
                        android:id="@+id/chip_estado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/item_name"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/complete_card"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/statusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="No Intentado"
                            android:textColor="@color/md_white_1000" />
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</LinearLayout>