<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E2E2"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:paddingBottom="160dp"
    tools:context=".activities.MesaAyudaActivity"
    android:scrollbars="vertical">

    <!-- Contenedor centrador -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="36dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Contenedor vertical con ancho fijo -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:gravity="center_horizontal">

            <!-- ========= Título y subtítulo ========= -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <ImageView
                    android:id="@+id/imageViewSobreNos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sobrenos"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/sobre_nosot" />

            </LinearLayout>

            <!-- ========= DL Group ========= -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp">

                <TextView
                    android:id="@+id/textViewDLGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nosotros"
                    android:textColor="#00213B"
                    android:textSize="20sp"
                    android:fontFamily="font/bevietnampro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewDLGroupDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="En DL diseñamos soluciones integrales para el desarrollo del talento y la transformación organizacional, combinando la experiencia de consultores especializados en gestión de capital humano, tecnologías de vanguardia y una de las OTECs más reconocidas del país.\n\nNuestro modelo nos permite diseñar estrategias de financiamiento que optimizan el uso de la franquicia tributaria SENCE y reducen los costos para la empresa, adaptándonos a las necesidades y contextos específicos de cada cliente.\n\nTodo esto sin perder de vista el desarrollo de las personas, promoviendo movilidad social, crecimiento profesional y un impacto directo en la productividad de las organizaciones."
                    android:textColor="#00213B"
                    android:textSize="16sp"
                    android:fontFamily="font/bevietnampro"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

            <!-- ========= Contacto ========= -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/textViewDLContactTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contáctanos"
                    android:textColor="#00213B"
                    android:textSize="18sp"
                    android:fontFamily="font/bevietnampro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewDLContactInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📧 contacto@dl.cl\n📞 +562 24957722\n🌐 www.dl.cl\n📍 Santa Beatriz 111, Oficina 101, Providencia, Santiago"
                    android:textColor="#00213B"
                    android:textSize="16sp"
                    android:fontFamily="font/bevietnampro"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>